@model IMDBMovieProject.Entities.Entities.Category

@{
    ViewData["Title"] = "Delete Category";
    bool hasNews = ViewBag.HasNews != null && (bool)ViewBag.HasNews;
}

<h3>Are you sure you want to delete this category?</h3>

@if (hasNews)
{
    <div class="alert alert-danger">
        <strong>Silme Engellendi!</strong><br />
        Bu kategoriye bağlı haberler bulunduğu için silme işlemi gerçekleştirilemez.
        <br />
        Lütfen önce ilgili haberleri silin veya başka bir kategoriye taşıyın.
    </div>
}

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Descripton)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Descripton)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IsActive)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.IsActive)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IsTopMenu)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.IsTopMenu)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ParentId)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ParentId)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.OrderNo)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.OrderNo)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />

        @if (!hasNews)
        {
            <input type="submit" value="Delete" class="btn btn-danger" />
        }
        else
        {
            <button class="btn btn-danger" disabled>Delete</button>
        }

        |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
