@model List<IMDBMovieProject.Entities.Entities.Movies>

@{
    ViewData["Title"] = "Favorites";
}

<section class="container my-5">
    <div class="text-center">
        <h1 class="display-4">Favorilerim</h1>
    </div>
    <div class="row">
        <div class="col-md-10">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Ürün</th>
                                <th>Rating</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="/Img/Movies/@item.Image" alt="@item.Title" height="37" />
                                    </td>
                                    <td>
                                        <a class="nav-link text-dark" href="/Movies/Details/@item.Id">
                                            @item.Title
                                        </a>
                                    </td>
                                    <td>
                                        @item.Rating
                                    </td>
                                    <td>
                                        <form asp-action="Remove" asp-controller="Favorites" method="post">
                                            <input type="hidden" name="moviesId" value="@item.Id" />
                                            <button class="btn btn-sm btn-danger" type="submit">
                                                <i class="bi bi-x-lg"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning my-5">
                    <h3>Favorilerinizde ürün bulunmamaktadır!</h3>
                </div>
            }
        </div>
    </div>
</section>