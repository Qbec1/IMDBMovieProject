@model IMDBMovieProject.Entities.Entities.ImdbTop100

<div class="row">
    <div class="col-lg-10">
        <!-- Blog post-->
        <div class="card mb-4">
            <span href="#!">
                <a href="/ImdbTop100s/Details/@Model.Id">
                    <img class="card-img-top" src="~/Img/top100/@Model.Image" alt="@Model.Title" style="height: 300px; object-fit: cover; width: 100%;">
                </a>
                <form asp-action="Add" asp-controller="ImdbTop100">
                    <input type="hidden" name="MoviesId" value="@Model.Id" />
                    <button class="btn btn-transparent" type="submit" style="box-shadow: none">
                        <i class="bi bi-heart"></i>
                    </button>
                </form>
                <div class="card-body">
                    <div class="small text-muted">@Model.CreatedDate</div>
                    <h2 class="card-title h4">@Model.Title</h2>
                    <p class="text">@Model.Description</p>
                    <a class="btn btn-primary" href="#!">Read more →</a>
                </div>
        </div>
    </div>
</div>